<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <servlet>
    <servlet-name>action</servlet-name>
    <servlet-class>com.myerp.handler.ActionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>action</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>helloservlet</servlet-name>
    <servlet-class>com.myerp.handler.HelloServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>helloservlet</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>myservlet</servlet-name>
    <servlet-class>com.myerp.handler.StudentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>myservlet</servlet-name>
    <url-pattern>/stu/list</url-pattern>
  </servlet-mapping>  
  <servlet>
    <servlet-name>myservlet4</servlet-name>
    <servlet-class>com.myerp.handler.UserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>myservlet4</servlet-name>
    <url-pattern>/user/save</url-pattern>
  </servlet-mapping>    
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>